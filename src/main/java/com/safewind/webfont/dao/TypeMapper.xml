<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.safewind.webfont.dao.TypeDao">
    <resultMap id="type" type="com.safewind.webfont.bean.Type">
        <id column="id" property="id" />
        <result column="name" property="name" jdbcType="VARCHAR"/>
    </resultMap>

    <select id="findTypeById" resultType="java.lang.String" parameterType="java.lang.Integer">

        SELECT name
        FROM t_style
        WHERE id=#{id}
    </select>

	<select id="getAllTypes" resultMap="type">
    	select * from t_type where 1=1;
    </select>

</mapper>